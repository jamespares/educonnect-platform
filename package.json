{
  "name": "educonnect",
  "version": "1.0.0",
  "description": "Teacher recruitment platform for China teaching opportunities",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node scripts/run-tests.js",
    "test:navigation": "node scripts/run-tests.js --type navigation",
    "test:forms": "node scripts/run-tests.js --type forms",
    "test:database": "node scripts/run-tests.js --type database",
    "test:ui": "node scripts/run-tests.js --type ui",
    "test:quick": "node scripts/run-tests.js --no-seed",
    "playwright:install": "npx playwright install",
    "playwright:install-deps": "npx playwright install-deps",
    "setup-tests": "npm run playwright:install && npm run playwright:install-deps",
    "migrate:supabase": "node scripts/migrations/migrate-to-supabase.js",
    "crawl-schools": "node scripts/crawl-schools.js"
  },
  "dependencies": {
    "@mendable/firecrawl-js": "^4.5.0",
    "@supabase/supabase-js": "^2.81.1",
    "bcryptjs": "^3.0.2",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "csv-stringify": "^6.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "openai": "^6.10.0",
    "pdf-parse": "^2.4.5",
    "resend": "^3.1.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "nodemon": "^3.0.1",
    "playwright": "^1.55.0"
  },
  "keywords": [
    "teaching",
    "recruitment",
    "china",
    "education"
  ],
  "author": "EduConnect",
  "license": "MIT"
}
