{
  "name": "educonnect",
  "version": "1.0.0",
  "description": "Teacher recruitment platform for China teaching opportunities",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node run-tests.js",
    "test:navigation": "node run-tests.js --type navigation",
    "test:forms": "node run-tests.js --type forms",
    "test:database": "node run-tests.js --type database", 
    "test:ui": "node run-tests.js --type ui",
    "test:quick": "node run-tests.js --no-seed",
    "playwright:install": "npx playwright install",
    "playwright:install-deps": "npx playwright install-deps",
    "setup-tests": "npm run playwright:install && npm run playwright:install-deps"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.8",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "nodemon": "^3.0.1",
    "playwright": "^1.55.0"
  },
  "keywords": [
    "teaching",
    "recruitment",
    "china",
    "education"
  ],
  "author": "EduConnect",
  "license": "MIT"
}
